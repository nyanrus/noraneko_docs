{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:astro dev",
    "build": "deno run -A --node-modules-dir --unstable-bare-node-builtins npm:astro build",
    "preview": "deno run -A --node-modules-dir npm:astro preview"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable", "deno.ns"]
  },
  "imports": {
    "@astrojs/starlight": "npm:@astrojs/starlight@^0.30.3",
    "astro": "npm:astro@^5.0.2",
    "wrangler": "npm:wrangler@^3.99.0"
  },
  "nodeModulesDir": "auto"
}
